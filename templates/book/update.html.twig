{% extends 'base.html.twig' %}


{# Page Settings #}
{% set title = "Modification du livre : " ~ book.title %}


{# Page Title #}
{% block title %}{{ title }} - {{ parent() }}{% endblock %}


{# Page Content #}
{% block body %}
<div class="container">


    {# Header / Titre de la page #}
    <header class="page-header">
        <h1 class="page-title">{{ title }}</h1>
    </header>


    {# Barre d'actions (ajouter un livre) #}
    <div class="page-toolbar text-right mt-3">
        <a href="{{ path('book:read', {id: book.id}) }}" class="btn btn-secondary btn-sm">Annuler</a>
        <a href="{{ path('book:index') }}" class="btn btn-secondary btn-sm">Retour Ã  la liste des livres</a>
        <a href="{{ path('book:delete', {id: book.id}) }}" class="btn btn-danger btn-sm">Supprimer le livre</a>
    </div>


    {# Formulaire de creation du livre #}
    {% include "book/_form.html.twig" with {
        form: form,
        btn_label: "Modifier le livre"
    } only %}


</div>
{% endblock %}